{
  "name": "dbm-network-client",
  "version": "1.1.0",
  "description": "Helps with DBM stuff",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "build -p always"
  },
  "author": "DBM Network",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "discord-rpc": "^3.0.1",
    "ejs-electron": "^2.0.3",
    "electron-updater": "^4.0.6",
    "font-awesome": "^4.7.0",
    "fs-extra": "^7.0.1",
    "github-download-parts": "^2.1.0",
    "jquery": "^3.3.1"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Discord-Bot-Maker-Mods",
        "repo": "DBM-Network-Client"
      }
    ],
    "appId": "com.dbm-network-client.app",
    "productName": "DBM Network Client",
    "copyright": "Copyright Â© 2019 DBM Network",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "synopsis": "Helps with DBM stuff",
      "description": "Helps with DBM stuff",
      "maintainer": "DBM Network",
      "icon": "./icon.png",
      "category": "Development",
      "executableName": "DBM Network Client",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": false,
      "perMachine": false,
      "oneClick": true,
      "installerIcon": "./app.ico",
      "uninstallerIcon": "./app.ico",
      "artifactName": "${productName} Setup.${ext}",
      "uninstallDisplayName": "uninstall"
    }
  }
}
